User sql=remote_users
    ident Text
    name Text Maybe
    admin Bool
    createdAt UTCTime default=now()
    UniqueUser ident
    deriving Typeable

Email sql=emails
    email Text
    userId UserId Maybe
    verkey Text Maybe
    UniqueEmail email

Revision sql=revisions
  itemId Int64
  itemClass Text
  body Text
  userId UserId
  createdAt UTCTime
  deletes Bool default=False

ValueSet sql=value_sets
  name Text
  createdAt UTCTime
  updatedAt UTCTime
  UValueSetName name

TValue sql=values
  name Text
  valueSetId ValueSetId
  createdAt UTCTime
  updatedAt UTCTime

Space json sql=spaces
  name Text
  description Textarea
  createdAt UTCTime
  updatedAt UTCTime
  proofOfTopology Textarea Maybe

Property json sql=properties
  name Text
  description Textarea
  valueSetId ValueSetId
  createdAt UTCTime
  updatedAt UTCTime

Trait json sql=traits
  spaceId SpaceId
  propertyId PropertyId
  valueId TValueId
  description Textarea
  createdAt UTCTime
  updatedAt UTCTime
  deduced Bool
  TraitSP spaceId propertyId

Theorem json sql=theorems
  antecedent (Formula Int64)
  consequent (Formula Int64)
  description Textarea
  converseIds [TheoremId] default='[]' -- [] for unknown
  createdAt UTCTime
  updatedAt UTCTime

-- This table is here simply to make it easier to
--   execute the common "what theorems involve this
--   property?" query
TheoremProperty sql=theorem_properties
  theoremId TheoremId
  propertyId PropertyId

-- Each deduced trait has a proof, which consists of
--   a single assumed theorem (`theoremId`) and a
--   collection of assumed traits (`Assumptions`)
Proof sql=proofs
  traitId TraitId
  theoremId TheoremId
  -- FIXME: this field should be made accurate or removed
  theoremIndex Int
  createdAt UTCTime
  updatedAt UTCTime
  UProofTrait traitId

Assumption sql=assumptions
  proofId ProofId
  traitId TraitId

-- Supporters trace the _root_ assumed traits for
Supporter sql=supporters
  assumedId TraitId
  impliedId TraitId
